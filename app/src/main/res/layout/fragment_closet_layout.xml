<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.dtelec.electric.viewModel.MainViewModel" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_main_bg">

            <include
                android:id="@+id/include_low_elec_closet"
                layout="@layout/include_low_electric_closet"
                android:layout_width="195dp"
                android:layout_height="475dp"
                android:layout_marginTop="40dp"
                android:visibility="@{viewModel.isShowHighlectricCloset?View.INVISIBLE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/include_high_elec_closet"
                layout="@layout/include_high_electric_closet"
                android:layout_width="195dp"
                android:layout_height="475dp"
                android:layout_marginTop="40dp"
                android:onClick="@{clickListener}"
                android:visibility="@{viewModel.isShowHighlectricCloset?View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_toggle"
                android:layout_width="40dp"
                android:layout_height="95dp"
                android:onClick="@{v->viewModel.show()}"
                android:scaleType="fitXY"
                android:src="@{viewModel.isShowHighlectricCloset?@drawable/ic_low_electric_closet:@drawable/ic_high_electric_closet}"
                app:layout_constraintBottom_toBottomOf="@id/include_low_elec_closet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/include_low_elec_closet" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>